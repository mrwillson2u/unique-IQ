{
  "manifest_version": 2,

  "name": "Unique IQ Scanner",
  "description": "This extension learns about you.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "unique_iq.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com https://cdn.firebase.com/js/client/2.4.0/firebase.js; object-src 'self'; style-src 'self' 'unsafe-inline'",

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "tabs",
    "history",
    "https://docs.google.com/feeds/*",
     "http://*.firebase.com/",
     "http://*.firebaseio.com/",
     "https://cdn.firebase.com/js/client/2.4.0/firebase.js",
    "https://www.google.com/accounts/OAuthGetRequestToken",
    "https://www.google.com/accounts/OAuthAuthorizeToken",
    "https://www.google.com/accounts/OAuthGetAccessToken",
    "http://d3js.org/d3.v3.min.js",
    "http://*/"
  ]
}
