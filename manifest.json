{
  "manifest_version": 2,

  "name": "Unique IQ Scanner",
  "description": "This extension learns about you, your interests, and how you learn to be able to curate content to give back to you.",
  "version": "1.1",

  "background": { "scripts": ["bower_components/firebase/firebase.js", "uniqueIq.js"] },
  "browser_action": {
      "name": "Click to change the icon"
  },

  "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com https://cdn.firebase.com/js/client/2.4.0/firebase.js; object-src 'self'; style-src 'self' 'unsafe-inline'",


  "permissions": [
    "activeTab",
    "tabs",
    "history",
   "http://*.firebase.com/",
   "http://*.firebaseio.com/",
   "https://cdn.firebase.com/js/client/2.4.0/firebase.js"
  ]
}
